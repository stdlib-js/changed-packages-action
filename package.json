{
    "name": "changed-packages-action",
    "version": "3.0.0",
    "description": "A GitHub action to return the list of changed stdlib packages in a push or pull request.",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "lint": "eslint . --ext .ts",
        "test": "tsx node_modules/.bin/tape 'test/**/*.ts' | tap-spec",
        "prepare": "husky install"
    },
    "keywords": [
        "github",
        "action",
        "changed",
        "packages",
        "pkgs",
        "stdlib-js",
        "stdlib",
        "push",
        "pull-request",
        "pull",
        "request"
    ],
    "author": {
        "name": "Philipp Burckhardt",
        "email": "pburckhardt@outlook.com"
    },
    "license": "Apache-2.0",
    "dependencies": {
        "@actions/core": "^1.10.1",
        "@actions/github": "^6.0.0",
        "@stdlib/assert-contains": "^0.2.0"
    },
    "devDependencies": {
        "@types/node": "^20.11.17",
        "@typescript-eslint/eslint-plugin": "^7.0.1",
        "@typescript-eslint/parser": "^7.0.1",
        "eslint": "^8.56.0",
        "husky": "^9.0.11",
        "tap-spec": "^5.0.0",
        "tape": "git+https://github.com/kgryte/tape.git#fix/globby",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3"
    }
}
